{
  "homedir": "./public",
  "port": "80",
  "error_pages": {
    "404": "./public/404.html",
    "500": "./public/500.html"
  },
  "default_indexes": ["index.html", "index.htm"],
  "handlers": {
    ".php": {
      "command": "/usr/bin/php-cgi",
      "args": ["-f", "{filepath}"]
    },
    ".davi": {
      "command": "./cgi/davi",
      "args": ["{filepath}"]
    }
  }
} 